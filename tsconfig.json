{
    "compilerOptions": {
        // Type checking
        "exactOptionalPropertyTypes": true,
        "noImplicitOverride": true,
        "noImplicitReturns": true,
        "strict": true,

        // Modules
        "module": "esnext",
        "moduleResolution": "bundler",
        "rootDir": "src",

        // Emit
        "declaration": true,
        "noEmit": true,
        "outDir": "dist",
        "sourceMap": true,

        // Language and Environment
        "target": "es2024",

        // Output formatting
        "noErrorTruncation": true,
    },
    "exclude": ["dist", "extension"],
}
